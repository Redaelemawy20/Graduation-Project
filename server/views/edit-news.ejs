<script>
  function deleteAttatchedFile(feed, file) {
    console.log(file);
    event.preventDefault();
    var url = `http://localhost:3000/news/${feed}/deleteFile?file=${file}`;
    var xhr = new XMLHttpRequest();
    xhr.open("DELETE", url);

    xhr.onreadystatechange = function () {
      if (xhr.readyState === 4) {
        console.log(xhr.responseText);
      }
    };
    xhr.send();
  }
</script>
